{
    "preset": "laravel",
    "exclude": [
        ".github",
        ".vscode",
        "build",
        "docs",
        "resources"
    ],
    "rules": {
        "binary_operator_spaces": {
            "default": "single_space",
            "operators": {
                "=>": "align_single_space_minimal",
                "=": "align_single_space_minimal"
            }
        },
        "concat_space": {
            "spacing": "one"
        },
        "return_type_declaration": {
            "space_before": "one"
        }
    }
}